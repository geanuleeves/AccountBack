<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wildb.account.mapper.RoleMapper">
    <resultMap id="roleMap" type="com.wildb.account.entity.Role">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="roleLevel" column="role_level"/>
        <result property="description" column="description"/>
        <result property="menuItems" column="menu_items"/>

    </resultMap>

    <select id="selectRolesByUserId" resultType="com.wildb.account.entity.Role" parameterType="int">
        SELECT
            r.*
        FROM
            role r
            LEFT JOIN user_role ur ON r.id = ur.role_id
            LEFT JOIN `user` u ON u.id = ur.user_id
        WHERE
            u.id = #{id}
    </select>

    <select id="selectRoleByPermissionIdAndUserId"  resultType="com.wildb.account.entity.Role">
        SELECT
            r.*,
            p.id
        FROM
            role r
            LEFT JOIN role_permission rp ON r.id = rp.role_id
            LEFT JOIN permission p ON p.id = rp.permission_id
            LEFT JOIN user_role ur ON ur.role_id = r.id
            LEFT JOIN `user` u ON u.id = ur.user_id
        WHERE
            p.id = #{arg0}
            AND u.id = #{arg1}
    </select>
</mapper>